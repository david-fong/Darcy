# http://man7.org/linux/man-pages/man1/lesskey.1.html

#command

^Q  quit
^F  forw-search
\kU back-scroll
\kD forw-scroll

# iokl
i  back-line
I  back-line-force
^I back-scroll
o  forw-line
O  forw-line-force
^O forw-scroll
j  left-scroll
;  right-scroll

# disabled back-line
y  noaction
^Y noaction
Y  noaction
^P noaction

# disabled forw-line
\r noaction
\n noaction
#j  noaction
e  noaction
^E noaction
#n noaction
^N noaction

# disabled forw-screen
f  noaction
^F noaction
\40 noaction
^V noaction
\e\40 noaction

# disabled back-screen
b  noaction
^B noaction
\ev noaction

# disabled forw-window back-window
z noaction
w noaction

# TODO turn off more things that I won't use.


#env

# this below line solves jank boundary scrolling.
LESS_TERMCAP_vb=

# +X : enable startup termcap
# -F : print to console if 1 page
# -q : medium-quiet
# -R : interpret escape-sequences
# -J : show status-column
# -N : show line numbers
# -M : use long prompt
# -x4: use <4> as tabstop
LESS = '-+x -FqRJNM -x4'


