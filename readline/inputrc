
# http://tiswww.case.edu/php/chet/readline/readline.html#SEC10
$include /etc/inputrc

# basic settings
set bell-style none
set completion-query-items 70
set completion-ignore-case on
set completion-display-width 80
set skip-completed-text on

set show-all-if-ambiguous on
set show-all-if-unmodified on

set input-meta off
#set output-meta off
set convert-meta off

set visible-stats off
set colored-stats on
set mark-directories on
set mark-symlinked-directories on


# Unbinding Things I Don't Useâ„¢
"\C-s": # foward-search-history
"\C-p": # previous-history
"\C-n": # next-history
"\C-j": # enter
"\C-q": # quoted-insert
"\C-v": # quoted-insert
"\C-t": # transpose-chars
"\et": # transpose-words
"\eu": # upcase-word
"\el": # downcase-word
"\ec": # capitalize-word
"\C-d": # delete-char
#"\ed": # kill-word

"\e\'": quoted-insert
"\\": self-insert

# iokl arrow-keys
"\ei": backward-char
"\eo": forward-char
"\ek": next-history
"\el": previous-history
"\em": accept-line
"\e;": backward-delete-char
"\C-?": backward-kill-word
"\e[3;5~": kill-word
"\ej": complete

#"\C-/": comment-begin
