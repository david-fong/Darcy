
# http://tiswww.case.edu/php/chet/readline/readline.html#SEC10
$include /etc/inputrc

# basic settings
set bell-style none
set completion-query-items 70
set completion-ignore-case on
set completion-display-width 95
set skip-completed-text on

set show-all-if-ambiguous on
set show-all-if-unmodified on

set input-meta off
#set output-meta off
set convert-meta off

set visible-stats off
set colored-stats on
set mark-directories on
set mark-symlinked-directories on

#set keymap iokl

# Unbinding Things I Don't Useâ„¢
"\C-s": # foward-search-history
"\C-p": # previous-history
"\C-n": # next-history
"\C-j": # enter
"\C-o": # enter
#"\C-m": # enter
"\C-q": # quoted-insert
"\C-v": # quoted-insert
"\C-t": # transpose-chars
"\et": # transpose-words
"\eu": # upcase-word
"\el": # downcase-word
"\ec": # capitalize-word
"\C-d": # delete-char
"\C-f": # forward-char
"\C-b": # backward-char
#"\ed": # kill-word
#"\C-i": # complete
"\e\e": # complete
"\C-h": # backward-delete-char
"\e\C-h": # backward-kill-word

"\e\'": quoted-insert
"\\": self-insert
"\t": complete
# arrow-keys
"\ej": backward-char
"\ei": forward-char
"\eo": previous-history
"\e;": next-history
"\em": accept-line
"\ef": accept-line
"\eh": backward-delete-char
#"\e;": delete-char
"\e[3;5~": kill-word
"\C-?": backward-delete-char
"\C-h": backward-kill-word
"\e/": kill-whole-line
"\eD": kill-whole-line
"\ea": complete
"\eA": insert-comment


#"\C-/": comment-begin
