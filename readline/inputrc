
# http://tiswww.case.edu/php/chet/readline/readline.html#SEC10
$include /etc/inputrc

# basic settings
set bell-style none
set completion-query-items 70
set completion-ignore-case on
set completion-display-width 95
set colored-completion-prefix on
#set completion-prefix-display-length 5
set skip-completed-text on

set show-all-if-ambiguous on
set show-all-if-unmodified on

set input-meta off
#set output-meta off
set convert-meta off

set visible-stats off
set colored-stats on
set mark-directories on
set mark-symlinked-directories on

#set keymap jimk

# Unbinding Things I Don't Useâ„¢
"\C-s": # foward-search-history
"\C-p": # previous-history
"\C-n": # next-history
"\C-j": # enter
#"\C-o": # enter # operate-and-get-next
#"\C-m": # enter # I don't know why, but if I disable this, the enter key stops working. assuming it's a console/terminal emulator thing.
"\C-q": # quoted-insert
"\C-v": # quoted-insert
"\C-t": # transpose-chars
"\et": # transpose-words
"\eu": # upcase-word
"\el": # downcase-word
"\ec": # capitalize-word
"\C-d": # delete-char
"\C-f": # forward-char
"\C-b": # backward-char
#"\ed": # kill-word
#"\C-i": # complete
"\e\e": # complete
"\C-h": # backward-delete-char
"\e\C-h": # backward-kill-word

"\e\'": quoted-insert
"\\": self-insert
"\t": complete
"\ea": complete
"\ef": accept-line
"\eA": insert-comment

# arrow-keys
"\ej": backward-char
"\ei": forward-char
"\el": beginning-of-line
"\e;": end-of-line
"\ek": previous-history
"\em": next-history

"\eo": backward-delete-char
#"\e;": delete-char
"\e[3;5~": kill-word
"\C-?": backward-delete-char
"\C-h": backward-kill-word
"\e/": kill-whole-line
"\eD": kill-whole-line
"\eh": "~"

$if Gdb
"\C-h": backward-delete-char
set completion-prefix-display-length 5
$endif

#"\C-/": comment-begin
