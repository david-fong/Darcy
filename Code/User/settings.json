{
    "workbench.colorTheme": "Monokai",
    "workbench.preferredDarkColorTheme": "Monokai",
    "window.newWindowDimensions": "maximized",
    "window.zoomLevel": 1.7,
    "window.confirmBeforeClose": "keyboardOnly",

    // Top Bar
    "window.titleBarStyle": "custom",
    "window.enableMenuBarMnemonics": false,
    "window.customMenuBarAltFocus": false,

    // Tabs
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.tabSizing": "shrink",

    "workbench.activityBar.visible": true,
    "zenMode.hideActivityBar": false,

    // Sidebar
    "workbench.sideBar.location": "left",
    "workbench.sash.size": 7,
    "workbench.sash.hoverDelay": 0,
    "workbench.tree.indent": 15,
    "workbench.tree.renderIndentGuides": "always",
    "explorer.sortOrder": "default",
    "explorer.autoReveal": false,

    // File Explorer Icons
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.files.associations": {
        "TODO.md": "todo",
    },
    "material-icon-theme.folders.associations": {
        "lib": "api", "libs": "api", // I don't like the color of the lib folder icon :P
        "defs": "constant",
        "impl": "class",
        "repl": "command",
        ".templates": "template",
        ".ts": "typescript",
    },
    "material-icon-theme.hidesExplorerArrows": true,

    // Behaviour
    "window.restoreWindows": "none",
    "workbench.startupEditor": "newUntitledFile",
    "extensions.ignoreRecommendations": false,
    "extensions.closeExtensionDetailsOnViewChange": true,
    "telemetry.telemetryLevel": "off",

    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.limit.enabled": true,
    "editor.snippetSuggestions": "bottom",
    "editor.linkedEditing": true,
    "editor.dragAndDrop": false,

    "git.enableCommitSigning": true,
    "git.suggestSmartCommit": false,
    "git.enableStatusBarSync": false,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.showCommitInput": false,
    "git.confirmSync": false,

    "editor.tabSize": 3,
    // "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
    // "editor.fontLigatures": "'ss03', 'ss04', 'ss06', 'ss07', 'ss08'",
    // "editor.fontSize": 11.5,
    // "editor.fontWeight": "500",
    // "editor.lineHeight": 17,
    "editor.fontSize": 14.4,
    // "editor.fontFamily": "'Consolas Ligaturized v2', Consolas, 'Courier New', monospace",
    // "editor.fontLigatures": "'ss03', 'ss04', 'ss06', 'ss07', 'ss08'",
    "editor.fontFamily": "'Inconsolata', 'consolas', 'Courier New', 'Ubuntu Mono'",

    // "editor.glyphMargin": false,
    "editor.cursorSurroundingLines": 3,
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "none",
    "editor.minimap.renderCharacters": false,
    "editor.suggest.showWords": false,
    "editor.suggestSelection": "first",
    // "editor.suggest.matchOnWordStartOnly": false,
    "editor.autoClosingDelete": "always",
    "editor.bracketPairColorization.enabled": false,
    // "editor.selectionHighlight": false,

    "debug.openDebug": "openOnSessionStart",
    // "debug.console.closeOnEnd": true,
    "debug.openExplorerOnEnd": true,
    "debug.toolBarLocation": "docked",
    "debug.inlineValues": "auto",
    "debug.console.fontSize": 11,

    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\git-cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "--command=usr/bin/bash.exe", "-l", "-i",
    ],
    "terminal.integrated.defaultProfile.windows": null,
    // "terminal.integrated.sendKeybindingsToShell": true,


    "typescript.npm": "C:\\Program Files\\nodejs\\npm.cmd",
    "typescript.disableAutomaticTypeAcquisition": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    //"typescript.implementationsCodeLens.enabled": true,

    "dart.allowAnalytics": false,
    "dart.flutterOutline": false,

    "cSpell.language": "en-GB",

    "todo-tree.tree.labelFormat": "${after}",
    "todo-tree.highlights.enabled": true,
    "todo-tree.filtering.useBuiltInExcludes": "file excludes",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.tree.flat": true,
    "todo-tree.tree.hideIconsWhenGroupedByTag": true,
    "todo-tree.general.tags": [
        "TODO", "[ ]", "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",

    "diffEditor.ignoreTrimWhitespace": false,

    // Syntax Highlighting
    "editor.tokenColorCustomizations": {
        "[Solarized Dark]": {
            "textMateRules": [{
                "scope": "variable.language.this.ts",
                "settings": {
                    "foreground": "#BBBBBB",
                },
            }],
        },
    },

    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wrappingIndent": "indent",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.tabSize": 2,
    },
    "[plaintext]": {
        "editor.wordWrap": "bounded",
        "editor.wrappingIndent": "same",
    },
    "[json]": {
        "editor.tabSize": 2,
    },
    "[toml]": {
        "editor.tabSize": 2,
    },
    "[cpp]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }, // it got annoying.
        "editor.tabSize": 3,
    },

    "C_Cpp.intelliSenseCacheSize": 0,
    "cmake.emscriptenSearchDirs": ["~/code/tool/emsdk/upstream/emscripten"],
    "cmake.statusbar.visibility": "compact",
	"cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    // "terminal.integrated.commandsToSkipShell": [
    //     "extension.multiCommand.execute",
    // ],true
    // "files.simpleDialog.enable": true
    // "editor.hover.enabled": false,
    // "editor.hover.sticky": true,
    "emmet.syntaxProfiles": {
        "html": {
            "compactBooleanAttributes": true
        },
    },
}