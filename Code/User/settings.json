{
    // UI Layout
    "workbench.colorTheme": "Solarized Dark",
    "workbench.sideBar.location": "left",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.tabSizing": "shrink",
    "workbench.tree.indent": 15,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.activityBar.visible": true,
    "zenMode.hideActivityBar": false,
    "window.newWindowDimensions": "maximized",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 2,

    // File Explorer Icons
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.files.associations": {
        "TODO.md": "todo",
    },
    "material-icon-theme.folders.associations": {
        "defs": "constant",
        "impl": "class",
        "repl": "command",
        ".templates": "template",
        ".ts": "typescript",
    },
    "material-icon-theme.hidesExplorerArrows": true,

    // Behaviour
    "workbench.startupEditor": "welcomePage",
    "window.enableMenuBarMnemonics": false,
    "window.customMenuBarAltFocus": false,
    "extensions.ignoreRecommendations": false,
    "extensions.closeExtensionDetailsOnViewChange": true,
    "telemetry.telemetryLevel": "off",

    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.limit.enabled": true,
    "editor.snippetSuggestions": "bottom",
    "editor.linkedEditing": true,
    "editor.dragAndDrop": false,

    "git.enableCommitSigning": true,
    "git.suggestSmartCommit": false,
    "git.enableStatusBarSync": false,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.showCommitInput": false,
    "git.confirmSync": false,

    "explorer.sortOrder": "type",
    "explorer.autoReveal": false,

    "editor.tabSize": 3,
    // "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
    // "editor.fontLigatures": "'ss03', 'ss04', 'ss06', 'ss07', 'ss08'",
    // "editor.fontSize": 11.5,
    // "editor.fontWeight": "500",
    // "editor.lineHeight": 17,
    "editor.fontSize": 14.4,
    // "editor.fontFamily": "'Consolas Ligaturized v2', Consolas, 'Courier New', monospace",
    // "editor.fontLigatures": "'ss03', 'ss04', 'ss06', 'ss07', 'ss08'",
    "editor.fontFamily": "'Inconsolata', 'consolas', 'Courier New', 'Ubuntu Mono'",

    "editor.cursorSurroundingLines": 3,
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "none",
    "editor.minimap.renderCharacters": false,
    "editor.suggest.showWords": false,
    "editor.suggestSelection": "first",
    "editor.autoClosingDelete": "always",

    "debug.openDebug": "openOnSessionStart",
    "debug.console.closeOnEnd": true,
    "debug.openExplorerOnEnd": true,
    "debug.toolBarLocation": "docked",
    "debug.inlineValues": true,
    "debug.console.fontSize": 11,

    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\git-cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "--command=usr/bin/bash.exe", "-l", "-i",
    ],
    "terminal.integrated.sendKeybindingsToShell": true,


    "typescript.npm": "C:\\Program Files\\nodejs\\npm.cmd",
    "typescript.disableAutomaticTypeAcquisition": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    //"typescript.implementationsCodeLens.enabled": true,

    "dart.allowAnalytics": false,
    "dart.flutterOutline": false,

    "cSpell.language": "en-GB",
    "trailing-spaces.highlightCurrentLine": false,

    "todo-tree.tree.labelFormat": "${after}",
    "todo-tree.highlights.enabled": true,
    "todo-tree.filtering.useBuiltInExcludes": "file excludes",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.tree.flat": true,
    "todo-tree.tree.hideIconsWhenGroupedByTag": true,
    "todo-tree.general.tags": [
        "TODO", "[ ]", "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",

    "diffEditor.ignoreTrimWhitespace": false,

    // Syntax Highlighting
    "editor.tokenColorCustomizations": {
        "[Solarized Dark]": {
            "textMateRules": [{
                "scope": "variable.language.this.ts",
                "settings": {
                    "foreground": "#BBBBBB",
                },
            }],
        },
    },

    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wrappingIndent": "indent",
        "editor.quickSuggestions": false,
        "editor.tabSize": 2,
    },
    "[plaintext]": {
        "editor.wordWrap": "bounded",
        "editor.wrappingIndent": "same",
    },
    "[json]": {
        "editor.tabSize": 2,
    },
    "[toml]": {
        "editor.tabSize": 2,
    },
    "rust-client.rustupPath": "~/.local/share/cargo/bin/rustup",
    // "rust.wait_to_build": null,
    "C_Cpp.updateChannel": "Insiders",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "java.imports.gradle.wrapper.checksums": [
        {
            "sha256": "1fca1b1af7c3ed6cb9059346aaa89179c82abf11252837115e546c4da38e8b0c",
            "allowed": true
        }
    ],
}
