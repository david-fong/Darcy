{
    "workbench.colorTheme": "Solarized Dark",
    "workbench.sideBar.location": "left",
    "workbench.editor.tabCloseButton": "off",
    "workbench.tree.indent": 17,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.activityBar.visible": true,

    "zenMode.hideActivityBar": false,
    "window.enableMenuBarMnemonics": false,
    "window.newWindowDimensions": "maximized",
    "window.zoomLevel": 0,

    "explorer.sortOrder": "type",
    "explorer.autoReveal": false,

    "editor.fontSize": 12.5,
    "editor.cursorSurroundingLines": 3,
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "none",
    "editor.minimap.renderCharacters": false,

    "debug.openExplorerOnEnd": true,
    "debug.inlineValues": true,

    "git.enableCommitSigning": true,
    "extensions.ignoreRecommendations": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.shellArgs.windows": [
        "--init-file",
        "~/.bash_profile"
    ],



    "typescript.npm": "C:\\Program Files\\NodeJS\\npm.cmd",
    "typescript.disableAutomaticTypeAcquisition": true,
    //"typescript.implementationsCodeLens.enabled": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",

    "eslint.validate": [
        "html",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
    ],

    "git.suggestSmartCommit": false,

    "todo-tree.tree.labelFormat": "${after}",
    "todo-tree.highlights.enabled": true,
    "todo-tree.filtering.useBuiltInExcludes": "file excludes",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.tree.showInExplorer": false,
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.tree.grouped": true,
    "todo-tree.tree.flat": true,
    "todo-tree.tree.hideIconsWhenGroupedByTag": true,

    "cSpell.language": "en-GB",
    "C_Cpp.updateChannel": "Insiders",
    "trailing-spaces.highlightCurrentLine": false,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.files.associations": {
        "TODO.md": "todo",
    }
}
